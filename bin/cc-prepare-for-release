#!/bin/bash

dirname=${0%/*}

###
# @public
# checks if circle-ci should create a release tag or not
###
main () {

    version=`$dirname/cc-get-version-from-log`

    run git status
    run git diff package.json
    run git checkout circle.yml
    run git checkout package.json

    if [[ ! -n $version ]]; then
        exit 1
    fi
}

main
